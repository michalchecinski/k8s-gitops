{
  packageRules: [
    // auto-updates - daily
    {
      "datasources": ["docker"],
      "automerge": true,
      automergeType: "branch",
      "requiredStatusChecks": null,
      "schedule": "after 1am and before 5am",
      "updateTypes": ["minor", "patch"],
      "packageNames": [
        "homeassistant/home-assistant",
        "koenkk/zigbee2mqtt",
        "esphome/esphome"
      ]
    },
    // auto-updates - weekly
    {
      "datasources": ["helm"],
      "automerge": true,
      "requiredStatusChecks": null,
      "schedule": "after 1am and before 5am",
      "updateTypes": ["minor", "patch"],
      "packageNames": [
        "grafana"
      ]
    }
  ]
}
